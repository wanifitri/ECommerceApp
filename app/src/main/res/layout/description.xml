<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="78dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_product"
        android:layout_marginStart="64dp"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/img_product"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_button"
        android:layout_alignEnd="@+id/txt_product_name"
        android:layout_marginEnd="22dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_product_name"
        android:layout_alignStart="@+id/txt_product_name"
        android:layout_marginBottom="25dp"
        android:text="Sample Description" />

    <Button
        android:id="@+id/txt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_product_name"
        android:layout_below="@+id/img_product"
        android:layout_marginTop="24dp"
        android:text="Add To Cart"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />
</RelativeLayout>
